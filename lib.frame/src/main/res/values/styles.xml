<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="AppTheme.Welcome" parent="AppTheme">
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#999999</item>
        <item name="actionMenuTextColor">@color/textBlack</item>
        <item name="navigationIcon">@drawable/ic_back_light</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/textSizeNor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Gray" parent="TextStyle">
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="TextStyle.Black" parent="TextStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="TextStyle.White" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/textSizeNor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Button.Login" parent="TextStyle.Button">
        <item name="android:background">@drawable/select_btn</item>
    </style>

    <style name="EditTextStyle" parent="TextStyle.Black">
        <item name="android:singleLine">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DevideStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/devide</item>
    </style>

    <style name="DevideStyle.V">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/devide</item>
    </style>

    <style name="ToolbarStyle.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarTextStyle.Light" parent="ToolbarTextStyle">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <!-- 有无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--无标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
